[core]
	excludesfile = ~/config/.global_gitignore
[user]
	name = Renato \"Lond\" Cerqueira
	email = renato@lond.com.br
[alias]
	ci = commit
	st = status
	co = checkout
	sdiff = diff --cached
	slap = blame -w
	sw = switch
	re = restore
[commit]
	template = ~/config/git_commit_msg.txt
[filter "tabspace"]
	smudge = unexpand --tabs=2 --first-only
	clean = expand --tabs=2 --initial
[merge]
	tool = vimdiff
[diff]
	tool = vimdiff
[mergetool]
	prompt = false
[difftool]
	prompt = false
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
[rebase]
	instructionFormat = (%an <%ae>) %s
